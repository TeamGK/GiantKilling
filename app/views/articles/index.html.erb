<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <% if article.image? %>
          <td><%= image_tag article.image.url %></td>
        <% else %>
          <td>画像がありません</td>
        <% end %>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.body %></td>
        <td><%= render 'articles/tag_list', tag_list: article.interest_list %></td>
        <td>
          <% if article.favorited_by? current_user %>
            <%= link_to "いいね解除", article_favorites_path(article), method: :delete %>
          <% else %>
            <%= link_to "いいね", article_favorites_path(article), method: :article %>
          <% end %>
        </td>
        <td>
          <% if article.user.followed_by? current_user %>
            <%= link_to "フォロー解除", user_relationships_path(article.user), method: :delete %>
          <% else %>
            <%= link_to "フォロー",user_relationships_path(article.user), method: :article %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @articles %>
