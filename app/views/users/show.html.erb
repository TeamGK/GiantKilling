<h1>マイページ</h1>

<ul class="list-group">
	<li class="list-group-item">名前：<%= @profile.name %></li>
	<li class="list-group-item">年齢：<%= @profile.age %></li>
	<li class="list-group-item">性別：<%= @profile.sex %></li>
	<li class="list-group-item">職業：<%= @profile.job %></li>
	<li class="list-group-item">趣味：<%= @profile.hobby %></li>
	<li class="list-group-item">身長：<%= @profile.height %></li>
	<li class="list-group-item">体重：<%= @profile.weight %></li>
	<li class="list-group-item">自己PR：<%= @profile.introduction %></li>

	<li class="list-group-item">
		<%= link_to user_path(@user) do %>
			<div class="text">投稿数</div>
			<div class="num"><%= @user.articles.count %></div>
		<% end %>
	</li>
	<li class="list-group-item">
		<%= link_to follows_user_path(@user) do %>
			<div class="text">フォロー</div>
			<div class="num"><%= @user.relationships.count %></div>
		<% end %>
	</li>
	<li class="list-group-item">
		<%= link_to followers_user_path(@user) do %>
			<div class="text">フォロワー</div>
			<div class="num"><%= @user.followers.count %></div>
		<% end %>
	</li>
	<li class="list-group-item">
		<%= link_to favorites_user_path(@user) do %>
			<div class="text">いいね一覧</div>
			<div class="num"><%= @user.favorites.count %></div>
		<% end %>
	</li>
</ul>

<p><%= link_to "プロフィール更新ページ", edit_profile_path(@user.id) %></p>


<h2>自分が上げた記事</h2>
<div class="row">
<% @articles.each do |article| %>
	<div class="col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h5 class="panel-title">タイトル：<%= link_to article.title, article_path(article) %></h5>
      </div>
      <div class="panel-body">
        <% if article.image? %>
          <%= link_to image_tag(article.image.url), article_path(article) %>
        <% end %>
      </div>
      <ul class="list-group">
        <li class="list-group-item">お店：<%= article.shop %></li>
        <li class="list-group-item">説明：<%= article.description %></li>
      </ul>
    </div>
  </div>
<% end %>
</div>
<li><%= paginate @articles %></li>